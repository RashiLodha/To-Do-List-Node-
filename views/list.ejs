

<%- include("header") -%>

  <div class="box" id="heading">
    <h1> <%= ListTitle %> </h1>
  </div>

  <div class="box">

    <%var i;%>
    <%for (i = 0; i < newListItem.length; i++) {%>
    <div class="item">
      <input type="checkbox">
      <p><%= newListItem[i] %></p>
    </div>

    <%}%>

    <form class="item" action="/" method="post">
    <!--  forward slash here is the Root route -->
    <!-- post the information given to form to the server at the home route -->
    <input type="text" name="newItem" placeholder="New Item" autocomplete="off">
    <button type="submit" name="list" value= <%= ListTitle %>>+</button>
    <!-- value helps us know whether the new item we added got added to the work list or to the normal lsit we created -->
    <!-- we need a submit button to trigger this post request  -->


    </form>

    </div>

    <%- include("footer") -%>
